# Azure AI/ML Training Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=development  # development, staging, production

# Azure Subscription
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=rg-aura-ml-prod
AZURE_LOCATION=eastus

# Azure Machine Learning
AZUREML_WORKSPACE_NAME=aura-ml-workspace
AZUREML_COMPUTE_NAME=cpu-cluster
AZUREML_GPU_COMPUTE_NAME=gpu-cluster
AZUREML_EXPERIMENT_NAME=audit-model-training

# Azure OpenAI Service
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-turbo
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# Azure AI Document Intelligence (Form Recognizer)
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-formrecognizer.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=your-formrecognizer-key-here

# Azure Cognitive Search
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_KEY=your-search-admin-key-here
AZURE_SEARCH_INDEX_NAME=audit-knowledge-base

# Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-key;EndpointSuffix=core.windows.net
AZURE_BLOB_CONTAINER_EDGAR=edgar-filings
AZURE_BLOB_CONTAINER_TRAINING=training-data
AZURE_BLOB_CONTAINER_MODELS=models

# Azure Key Vault
AZURE_KEY_VAULT_NAME=your-keyvault-name
AZURE_KEY_VAULT_URL=https://your-keyvault-name.vault.azure.net/

# Azure PostgreSQL
AZURE_POSTGRES_HOST=your-postgres-server.postgres.database.azure.com
AZURE_POSTGRES_PORT=5432
AZURE_POSTGRES_DATABASE=aura_ml_training
AZURE_POSTGRES_USER=auradmin
AZURE_POSTGRES_PASSWORD=your-secure-password-here
AZURE_POSTGRES_SSL_MODE=require

# Azure Databricks (Optional)
AZURE_DATABRICKS_WORKSPACE_URL=https://adb-1234567890123456.7.azuredatabricks.net
AZURE_DATABRICKS_TOKEN=your-databricks-token

# Azure Synapse Analytics (Optional)
AZURE_SYNAPSE_WORKSPACE_NAME=your-synapse-workspace
AZURE_SYNAPSE_SQL_ENDPOINT=your-synapse-workspace.sql.azuresynapse.net

# Training Configuration
TRAINING_BATCH_SIZE=32
TRAINING_EPOCHS=10
TRAINING_LEARNING_RATE=0.00002
TRAINING_VALIDATION_SPLIT=0.2
TRAINING_TEST_SPLIT=0.1
TRAINING_RANDOM_SEED=42

# Model Performance Targets
TARGET_AUDIT_OPINION_ACCURACY=0.995  # 99.5%
TARGET_DISCLOSURE_COMPLIANCE=0.95  # 95%
TARGET_WORKPAPER_COMPLETENESS=0.98  # 98%
TARGET_MATERIALITY_ALIGNMENT=0.99  # 99%
TARGET_FRAUD_PRECISION=0.97  # 97%
TARGET_FRAUD_RECALL=0.95  # 95%

# Data Collection
EDGAR_SCRAPER_START_DATE=2015-01-01
EDGAR_SCRAPER_RATE_LIMIT=0.11  # 10 requests per second (SEC limit)
EDGAR_SCRAPER_MAX_COMPANIES=10000

# Knowledge Base
KNOWLEDGE_BASE_CHUNK_SIZE=500
KNOWLEDGE_BASE_CHUNK_OVERLAP=50
KNOWLEDGE_BASE_EMBEDDING_BATCH_SIZE=100

# MLOps
MLFLOW_TRACKING_URI=azureml://your-workspace
MLFLOW_EXPERIMENT_NAME=audit-models
MODEL_REGISTRY_NAME=AuditModels

# Monitoring
ENABLE_AZURE_MONITOR=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_NETWORK_ISOLATION=true
