# Marketing Site Environment Variables

# Base URL for the site (used for sitemap and canonical URLs)
NEXT_PUBLIC_SITE_URL=https://auraaudit.ai

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager (optional)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Form submission endpoint (if using a service like Formspree, ConvertKit, etc.)
NEXT_PUBLIC_FORM_ENDPOINT=https://formspree.io/f/your-form-id

# Contact email
NEXT_PUBLIC_CONTACT_EMAIL=hello@auraaudit.ai

# API endpoint for demo requests (if applicable)
NEXT_PUBLIC_API_URL=https://api.auraaudit.ai

# Intercom or other chat widget (optional)
NEXT_PUBLIC_INTERCOM_APP_ID=your-intercom-app-id

# HubSpot tracking (optional)
NEXT_PUBLIC_HUBSPOT_PORTAL_ID=your-portal-id

# Feature flags
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
