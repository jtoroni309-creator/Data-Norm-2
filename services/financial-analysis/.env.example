# Application
APP_NAME=Financial Analysis Service
DEBUG=false
ENVIRONMENT=production

# Database
DATABASE_URL=postgresql+asyncpg://user:password@postgres:5432/aura_financial_analysis

# Redis
REDIS_URL=redis://redis:6379/4

# SEC EDGAR
SEC_USER_AGENT=Aura Audit AI support@auraaudit.ai
SEC_REQUESTS_PER_SECOND=0.1

# OpenAI
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Azure OpenAI (alternative)
AZURE_OPENAI_API_KEY=your_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Vector Database
PINECONE_API_KEY=your_key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=financial-statements

QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=financial_statements

# Storage
STORAGE_TYPE=azure
AZURE_STORAGE_CONNECTION_STRING=your_connection_string
AZURE_STORAGE_CONTAINER=financial-data
MODEL_STORAGE_CONTAINER=ml-models

# Analysis Configuration
DEFAULT_MATERIALITY_PERCENTAGE=0.05
PERFORMANCE_MATERIALITY_PERCENTAGE=0.75
TRIVIAL_THRESHOLD_PERCENTAGE=0.05

# Risk Thresholds
HIGH_RISK_DEBT_TO_EQUITY=2.0
LOW_LIQUIDITY_CURRENT_RATIO=1.0
GOING_CONCERN_RISK_THRESHOLD=0.75

# Industry Benchmarking
ENABLE_INDUSTRY_BENCHMARKING=true
PEER_COMPARISON_COUNT=5

# Training
TRAINING_BATCH_SIZE=32
TRAINING_EPOCHS=10
TRAINING_LEARNING_RATE=0.001
VALIDATION_SPLIT=0.2

# Background Jobs
EDGAR_SYNC_INTERVAL_HOURS=24
MODEL_RETRAINING_INTERVAL_DAYS=30

# JWT
JWT_SECRET_KEY=your_jwt_secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_AUTO_OPINION=true
ENABLE_RAG=true
