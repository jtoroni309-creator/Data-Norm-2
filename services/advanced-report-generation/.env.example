# Service Configuration
SERVICE_NAME=advanced-report-generation
SERVICE_PORT=8019

# Database
DATABASE_URL=postgresql+asyncpg://atlas:password@postgres:5432/atlas_db

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-turbo
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# Azure Cognitive Search
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_NAME=audit-workpapers-index

# Report Generation Settings
CONSTITUTIONAL_AI_ENABLED=true
MULTI_AGENT_ENABLED=true
SELF_CONSISTENCY_SAMPLES=5
RAG_TOP_K=10
RAG_RERANK_TOP_K=3

# Model Parameters
OPINION_AGENT_TEMPERATURE=0.05
BASIS_AGENT_TEMPERATURE=0.1
FINDINGS_AGENT_TEMPERATURE=0.15
DISCLOSURE_AGENT_TEMPERATURE=0.1
COMPLIANCE_AGENT_TEMPERATURE=0.0
EDITOR_AGENT_TEMPERATURE=0.1

# Compliance
COMPLIANCE_RULES_PATH=/app/rules/compliance_rules.json
NEURAL_COMPLIANCE_ENABLED=true
MIN_COMPLIANCE_SCORE=0.95
BLOCK_ON_CRITICAL_VIOLATIONS=true

# Performance
MAX_TOKENS_PER_SECTION=2000
REQUEST_TIMEOUT_SECONDS=180
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# Paths
REGULATORY_STANDARDS_PATH=/app/data/regulatory_standards.json
KNOWLEDGE_GRAPH_CACHE_PATH=/app/cache/knowledge_graph.pkl
