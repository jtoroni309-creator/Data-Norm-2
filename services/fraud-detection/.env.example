# Application
APP_NAME=Fraud Detection Service
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Database
DATABASE_URL=postgresql+asyncpg://user:password@postgres:5432/aura_fraud_detection

# Redis
REDIS_URL=redis://redis:6379/3

# Plaid API
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENVIRONMENT=production
PLAID_WEBHOOK_URL=https://your-domain.com/webhooks/plaid

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Azure Key Vault
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Model Storage
MODEL_STORAGE_TYPE=azure
AZURE_STORAGE_CONNECTION_STRING=your_connection_string
AZURE_STORAGE_CONTAINER=ml-models

# Fraud Detection Configuration
DEFAULT_FRAUD_THRESHOLD=0.75
HIGH_RISK_THRESHOLD=0.90
AUTO_CASE_CREATION_THRESHOLD=0.85

# Transaction Limits
MAX_DAILY_TRANSACTIONS_LIMIT=1000
LARGE_TRANSACTION_AMOUNT=10000.00

# Velocity Checks
VELOCITY_CHECK_WINDOW_MINUTES=60
MAX_TRANSACTIONS_PER_HOUR=10

# Geographic Settings
MAX_GEOGRAPHIC_DISTANCE_MILES=500

# Notifications
SENDGRID_API_KEY=your_sendgrid_key
ALERT_EMAIL_FROM=alerts@auraaudit.ai
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_FROM_PHONE=+1234567890

# Background Jobs
TRANSACTION_SYNC_INTERVAL_MINUTES=15
MODEL_RETRAINING_INTERVAL_DAYS=7

# JWT
JWT_SECRET_KEY=your_jwt_secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_ML_MODELS=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_ANOMALY_DETECTION=true
